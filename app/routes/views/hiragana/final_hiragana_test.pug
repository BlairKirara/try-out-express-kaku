extends ../layout

block title 
  title='KakuLearn | Final Hiragana Test'
block content
    .breadcrumb
        a(href='/') Homepage
        span.separator › 
        a(href='/hiragana') Hiragana
        span.separator › 
        a(href='/hiragana/quiz_lvl') Hiragana Quiz Levels
        span.separator.current-location › 
        a.current-location(href='/hiragana/final_test') Final Test
    .quiz
        h1 How can you read these hiragana characters?
        | &nbsp;
        .middle-quiz
            #question
            input(type='text', id='answer', placeholder='Type your answer')
        .quiz-results
            #questionNumber
            #result
            button.go_next#submit_answer(onclick='checkAnswer()') Submit
        .correct-answer 
            #correct_answer_display
        .go_back
            #go_back_to
            #go_back_front.go
            #go_back_katakana.go
    
    script(src='../js/final_hiragana_test.js')
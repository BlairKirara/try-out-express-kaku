extends ../layout

block title 
  title='KakuLearn | Katakana List'
block content
  table.katakana-table
    thead
      tr 
        th(colspan="4") Katakana Characters
      tr
        th Katakana
        th Romaji
    tbody
      each character in katakana
        tr
          td= character.Katakana
          td= character.Romaji
  | &nbsp;
  table.katakana-dakuten-table 
    thead 
      tr
        th(colspan="4") Dakuten and Handakuten
      tr 
        th
        th katakana
        th romaji
    tbody 
      tr 
        td(class="rowspan_list" rowspan="21") Dakuten
      each character, index in katakana_dakuten.slice(0, 20)
        tr 
          td= character.Katakana
          td= character.Romaji
      tr 
        td(class="rowspan_list" rowspan="6") Handakuten
      each character, index in katakana_dakuten.slice(20, 26)
        tr 
          td= character.Katakana
          td= character.Romaji
  | &nbsp;
  table.katakana-combinations-table 
    thead 
      tr
        th(colspan="3") Katakana Combinations
      tr 
        th katakana
        th romaji
    tbody 
      each character in katakana_combinations 
        tr 
          td= character.Katakana
          td= character.Romaji

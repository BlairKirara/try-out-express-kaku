extends ../layout

block title 
  title='KakuLearn | Edit Katakana Flashcard'
block content
  h1 Edit Flashcard
  form(action=`/katakana_flashcard/update/${flashcard.id}`, method="POST")
    label(for="romaji") Romaji:
    input(class="submition_form" type="text", id="romaji", name="romaji", value=flashcard.romaji)
    br
    label(for="katakana") Katakana:
    input(class="submition_form" type="text", id="katakana", name="katakana", value=flashcard.katakana)
    br
    button.go_next(type="submit") Save
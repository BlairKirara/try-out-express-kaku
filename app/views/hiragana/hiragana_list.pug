extends ../layout

block content
  table.hiragana-table
    thead
      tr 
        th(colspan="4") Hiragana Characters
      tr
        th Hiragana
        th Romaji
    tbody
      each character in hiragana
        tr
          td= character.Hiragana
          td= character.Romaji
  | &nbsp;
  table.hiragana-dakuten-table 
    thead 
      tr
        th(colspan="4") Dakuten and Handakuten
      tr 
        th
        th hiragana
        th romaji
    tbody 
      tr 
        td(class="rowspan_list" rowspan="21") Dakuten
      each character, index in hiragana_dakuten.slice(0, 20)
        tr 
          td= character.Hiragana
          td= character.Romaji
      tr 
        td(class="rowspan_list" rowspan="6") Handakuten
      each character, index in hiragana_dakuten.slice(20, 26)
        tr 
          td= character.Hiragana
          td= character.Romaji
  | &nbsp;  
  table.hiragana-combinations-table 
    thead 
      tr
        th(colspan="3") Hiragana Combinations
      tr 
        th hiragana
        th romaji
    tbody 
      each character in hiragana_combinations 
        tr 
          td= character.Hiragana
          td= character.Romaji
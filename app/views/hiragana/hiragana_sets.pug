extends ../layout

block content
  h1 Your Hiragana Sets
  | &nbsp;
  if sets.length === 0
    p No sets available.
  else
    table
      thead
        tr
          th Set Name
          th Actions
      tbody
        each set in sets
          tr
            td= set.name
            td
              button.go_next(onclick=`practiceSet('${set.id}')`) Practice
              | &nbsp;
              button.go_next(onclick=`deleteSet('${set.id}')`) Delete
              | &nbsp;
              button.go_next(onclick=`editSet('${set.id}')`) Edit

  script(src="../js/hiragana_converter.js")

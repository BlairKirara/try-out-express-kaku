extends ../layout

block title 
  title='KakuLearn | Hiragana Combinations Quiz'
block content
    .breadcrumb
        a(href='/') Homepage
        span.separator › 
        a(href='/hiragana') Hiragana
        span.separator › 
        a(href='/hiragana/quiz_lvl') Hiragana Quiz Levels
        span.separator.current-location › 
        a.current-location(href='/hiragana/combinations_quiz') Combinations Quiz
    .quiz
        h1 How can you read these hiragana characters?
        .middle-quiz
            #question
            input(type='text', id='answer', placeholder='Type your answer')
        .quiz-results
            #questionNumber
            #result
            button.go_next#submit_answer(onclick='checkAnswer()') Submit
        .correct-answer 
            #correct_answer_display
        .go_back
            #go_back_to
            #go_back_front.go
            #go_back_katakana.go
    
    script(src='../js/hiragana_combinations_quiz.js')
extends layout

block content
  h1 Edit Set
  | &nbsp;
  if set.length === 0
    p No flashcards available for this set.
  else
    table
      thead
        tr
          th Romaji
          th Katakana
          th Actions
      tbody
        each flashcard in set
          tr
            td= flashcard.romaji
            td= flashcard.katakana
            td
              button(onclick=`deleteKatakanaFlashcard('${flashcard.id}')`) Delete
              | &nbsp;
              button(onclick=`editKatakanaFlashcard('${flashcard.id}')`) Edit

    script(src="../js/katakana_converter.js")
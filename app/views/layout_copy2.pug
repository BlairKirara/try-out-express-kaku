  body
    .container
      if message && message.length > 0
        ul
          each msg in message
            li= msg 
      header   
        .logo 
            .circle 
            h1 
                a(href='/about') KakuLearn          
        nav.nav-bar
            .hamburger-menu-icon          
            ul.header-links
                li
                    a(href='/about') About
                li
                    a(href='/hiragana') Hiragana
                li
                    a(href='/katakana') Katakana
                li
                    a(href='/radicals') Radicals
        nav.nav-bar
            ul.header-links
                if user
                    li
                        a(href='/') Profile
                    li | 
                    li
                        a(href='/logout') Log Out
                else
                    li
                        a(href='/') Log In
                    li | 
                    li
                        a(href='/signup') Sign Up
      .origami
        img(src='/images/origami.png', width='250px')
        img(src='/images/origami.png', width='250px')


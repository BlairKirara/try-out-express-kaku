extends layout

block content
    if user
      h1 It's nice to see you again #{user.username} !
      a.go_next(href='/scores') See your quiz scores!
      | &nbsp;
      a.go_next(href='/hiragana_sets') See your hiragana flashcard sets!
      | &nbsp;
      a.go_next(href='/katakana_sets') See your katakana flashcard sets!
    else
      h2 Log In or Sing Up
      form(action='/login' method='POST')
        div
          label(for='username') Username
          input(class='login', name='username' placeholder='username' type='text')
        div
          label(for='password') Password
          input(class='login', name='password' placeholder='password' type='password')
        div
          button(type='submit') Log In 
          | &nbsp;
          button(type='button', onclick="window.location.href='/signup'") Sign Up
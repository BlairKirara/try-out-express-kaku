extends layout

block content
    if user
      h2.profile_center It's nice to see you again #{user.username}!
      a.go_next_profile.profile_center(href='/scores') See your quiz scores!
      | &nbsp;
      a.go_next_profile.profile_center(href='/hiragana_sets') See your hiragana flashcard sets!
      | &nbsp;
      a.go_next_profile.profile_center(href='/katakana_sets') See your katakana flashcard sets!
    else
      h2 Log In or Sing Up
      form(action='/login' method='POST')
        div
          label(for='username') Username
          input(class='submition_form', name='username' placeholder='username' type='text')
        div
          label(for='password') Password
          input(class='submition_form', name='password' placeholder='password' type='password')
        div
          button.go_next(type='submit') Log In 
          | &nbsp;
          button.go_next(type='button', onclick="window.location.href='/signup'") Sign Up
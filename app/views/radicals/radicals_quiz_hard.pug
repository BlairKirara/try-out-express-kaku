extends ../layout

block content
    .quiz
        h2 What is the meaning of this radical?
        .middle-quiz
            .aswers
                #question.radicals-font
                button.go_next#answer1(onclick='checkAnswer(this.innerText)') Answer A
                button.go_next#answer2(onclick='checkAnswer(this.innerText)') Answer B
                button.go_next#answer3(onclick='checkAnswer(this.innerText)') Answer C
        .quiz-results
            #questionNumber
            #result
        .correct-answer 
            #correct_answer_display.radicals-font
        .go_back
            #go_back_to
            #go_back_front.go
            #go_back_katakana.go
    
    script(src='../js/radicals_quiz_hard.js')
